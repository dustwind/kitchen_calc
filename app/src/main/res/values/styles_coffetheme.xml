<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Theme.Coffetheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:textAppearance">@style/CoffeTheme.TextAppearance.Large</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Coffetheme</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Coffetheme</item>
        <item name="android:actionBarTabTextStyle">@style/Coffetheme.ActionBar.TabText</item>
        <item name="android:windowBackground">@color/window_background_color</item>
        <item name="android:textColor">@color/fount_color</item>
        <item name="android:editTextStyle">@style/CoffeTheme.EditText</item>
    </style>

    <style name="CoffeTheme.TextAppearance.Large" parent="android:TextAppearance.Large">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Coffetheme.ActionBar.TitleTextStyle" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/window_background_color</item>
    </style>

    <style name="Coffetheme.ActionBar.TabText" parent="android:Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/fount_color</item>
    </style>

    <style name="ActionBar.Solid.Coffetheme" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/fount_color</item>
        <item name="android:titleTextStyle">@style/Coffetheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="ActionBarTabStyle.Coffetheme" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_coffetheme</item>
    </style>

    <style name="CoffeTheme.EditText" parent="android:Widget.EditText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/fount_color</item>
    </style>

</resources>